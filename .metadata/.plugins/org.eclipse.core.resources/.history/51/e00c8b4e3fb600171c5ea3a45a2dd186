package com.cg.library.client;

import com.cg.jpacrud.entities.Book;
import com.cg.jpacrud.service.BookService;
import com.cg.jpacrud.service.BookServiceImpl;

public class Client {

	public static void main(String[] args) {

		LibraryService service = new LibraryServiceImpl();
		
		
		System.out.println("************Listing total number of books*************");
		System.out.println("Total books:"+service.getBookCount());
		
		System.out.println("\n\n\n************Listing book with id 105*************");
		System.out.println("Book with ID 106:"+service.getBookById(105));
		
		System.out.println("\n\n\n************Listing All books*************");
		for(Librarian book:service.getAllBooks()) {
			System.out.println(book);
		}
		
		
		
		System.out.println("\n\n\n************Listing book written by Danny Coward*************");
		for(Librarian book:service.getAuthorBooks("Danny Coward") ) {
			System.out.println(book);
		}
		
		System.out.println("\n\n\n************Listing book on Android*************");
		for(Librarian book:service.getBookByTitle("Android")) {
			System.out.println(book);
		}
		
		
		
		System.out.println("\n\n\n************Listing All books between 500 and 600*************");
		for(Librarian book:service.getBooksInPriceRange(500, 600) ) {
			System.out.println(book);
		}
		
		
		
		

	}
}
